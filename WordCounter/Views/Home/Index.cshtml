@{
  Layout = "_Layout";

}


<body>
    <div class="container">
        <div class="jumbotron">
        <h1>Word Counter</h1>
        </div>
        <br>
        <br>
        <h3>Check How Many Times a given Word repeats in a String</h3>
        <br>
        <div class="well">
            <form  action="/results" method="post">
                <div class="form-group">
                <label for="str">Enter a String</label>
                <input type="text" class="form-control" name="str" required>
                </div>

                <div class="form-group">
                <label for="word">Enter a Word</label>
                <input type="text" class="form-control" name="word" required>
                </div>

            <button type='submit'>Count!!!</button>
        </div>
        <br>
        <br>
    </div>
</body>
